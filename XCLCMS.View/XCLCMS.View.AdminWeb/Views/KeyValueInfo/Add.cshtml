@{
    Layout = "~/Views/MasterView/Main.cshtml";
}
@model XCLCMS.View.AdminWeb.Models.KeyValueInfo.KeyValueInfoAddVM

<form id="mainForm" action="@Model.FormAction" method="post">
    <input type="hidden" id="KeyValueInfoID" name="KeyValueInfoID" value="@Model.KeyValueInfo.KeyValueInfoID" />

    <div class="XCLAccordion" style="border-top: none;">
        <div class="XCLAccordionHeader">1、基本信息：</div>
        <div class="XCLAccordionBody">
            <table class="XCLTableEdit">

                <tr>
                    <td class="XCLTitle">所属商户号：</td>
                    <td>
                        <input type="text" class="easyui-numberbox" id="txtMerchantID" name="txtMerchantID" value="@Model.KeyValueInfo.FK_MerchantID" />
                    </td>
                    <td class="XCLTitle">所属应用号：</td>
                    <td><input type="text" class="easyui-numberbox" id="txtMerchantAppID" name="txtMerchantAppID" value="@Model.KeyValueInfo.FK_MerchantAppID" /></td>
                    <td class="XCLTitle"></td>
                    <td></td>
                </tr>

                <tr>
                    <td class="XCLTitle"><span class="XCLRedBolder">*</span>唯一标识：</td>
                    <td>
                        <input type="text" name="txtCode" value="@Model.KeyValueInfo.Code" />
                    </td>
                    <td class="XCLTitle">所属产品：</td>
                    <td>
                        <input type="text" name="txtFK_ProductID" value="@Model.KeyValueInfo.FK_ProductID" />
                    </td>
                    <td class="XCLTitle">所属用户：</td>
                    <td>
                        <input type="text" name="txtFK_UserID" value="@Model.KeyValueInfo.FK_UserID" />
                    </td>
                </tr>

                <tr>
                    <td class="XCLTitle">分类：</td>
                    <td>
                        <input id="selKeyValueInfoType" name="selKeyValueInfoType" value="@Model.KeyValueInfo.KeyValueInfoTypeIDs" style="width:200px;height:25px;" multiple />
                    </td>
                    <td class="XCLTitle">备注：</td>
                    <td>
                        <textarea name="txtRemark">@Model.KeyValueInfo.Remark</textarea>
                    </td>
                    <td class="XCLTitle"></td>
                    <td></td>
                </tr>

                <tr>
                    <td class="XCLTitle">内容：</td>
                    <td colspan="100">
                        <textarea name="txtContents" style="height:400px;">@Model.KeyValueInfo.Contents</textarea>
                    </td>
                </tr>

                <tr>
                    <td class="XCLTitle">记录状态：</td>
                    <td>
                        <select name="selRecordState">
                            @Html.Raw(Model.RecordStateOptions)
                        </select>
                    </td>
                    <td class="XCLTitle"></td>
                    <td></td>
                    <td class="XCLTitle"></td>
                    <td></td>
                </tr>
            </table>
        </div>

        <div class="XCLHandBar">
            <a href="@XCLCMS.View.AdminWeb.Common.WebCommon.RefferUrl" class="easyui-linkbutton" data-options="iconCls:'icon-back'">返回</a>
            @switch ((XCLNetTools.Enum.CommonEnum.HandleTypeEnum)ViewBag.CurrentHandleType)
            {
                case XCLNetTools.Enum.CommonEnum.HandleTypeEnum.ADD:
                    <a id="btnSave" class="easyui-linkbutton" data-options="iconCls:'icon-save'">保存数据信息</a>
                    break;
                case XCLNetTools.Enum.CommonEnum.HandleTypeEnum.UPDATE:
                    <a id="btnSave" class="easyui-linkbutton" data-options="iconCls:'icon-save'">保存修改</a>
                    break;
            }
        </div>
    </div>
</form>

<div class="XCLPanel" style="margin-top: 5px;">
    <div class="XCLPanelHeader XCLBolder">
        操作说明：
    </div>
    <div class="XCLPanelBody">
    </div>
</div>

<script type="text/javascript">
    $(function () {
        window.xclcms.KeyValueInfo.KeyValueInfoAdd.Init();
    });
</script>