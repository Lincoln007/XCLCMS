@{
    Layout = "~/Views/MasterView/Main.cshtml";
}
@model XCLCMS.View.AdminWeb.Models.Product.ProductAddVM

<form id="mainForm" action="@Model.FormAction" method="post">
    <input type="hidden" id="ProductID" name="ProductID" value="@Model.Product.ProductID" />

    <div class="XCLAccordion" style="border-top: none;">
        <div class="XCLAccordionHeader">1、基本信息：</div>
        <div class="XCLAccordionBody">
            <table class="XCLTableEdit">

                <tr>
                    <td class="XCLTitle">所属商户号：</td>
                    <td>
                        <input type="text" class="easyui-numberbox" id="txtMerchantID" name="txtMerchantID" value="@Model.Product.FK_MerchantID" />
                    </td>
                    <td class="XCLTitle">所属应用号：</td>
                    <td><input type="text" class="easyui-numberbox" id="txtMerchantAppID" name="txtMerchantAppID" value="@Model.Product.FK_MerchantAppID" /></td>
                    <td class="XCLTitle"></td>
                    <td></td>
                </tr>

                <tr>
                    <td class="XCLTitle"><span class="XCLRedBolder">*</span>名称：</td>
                    <td>
                        <input type="text" name="txtProductName" value="@Model.Product.ProductName" />
                    </td>
                    <td class="XCLTitle">价格：</td>
                    <td>
                        <input type="text" class="easyui-numberbox" precision="2" style="height:25px;" name="txtPrice" value="@Model.Product.Price" />
                    </td>
                    <td class="XCLTitle">备注：</td>
                    <td>
                        <textarea name="txtRemark">@Model.Product.Remark</textarea>
                    </td>
                </tr>

                <tr>
                    <td class="XCLTitle">描述：</td>
                    <td colspan="100">
                        <textarea name="txtDescription">@Model.Product.Description</textarea>
                    </td>
                </tr>

                <tr>
                    <td class="XCLTitle">记录状态：</td>
                    <td>
                        <select name="selRecordState">
                            @Html.Raw(Model.RecordStateOptions)
                        </select>
                    </td>
                    <td class="XCLTitle"></td>
                    <td></td>
                    <td class="XCLTitle"></td>
                    <td></td>
                </tr>
            </table>
        </div>

        <div class="XCLHandBar">
            <a href="@XCLCMS.View.AdminWeb.Common.WebCommon.RefferUrl" class="easyui-linkbutton" data-options="iconCls:'icon-back'">返回</a>
            @switch ((XCLNetTools.Enum.CommonEnum.HandleTypeEnum)ViewBag.CurrentHandleType)
            {
                case XCLNetTools.Enum.CommonEnum.HandleTypeEnum.ADD:
                    <a id="btnSave" class="easyui-linkbutton" data-options="iconCls:'icon-save'">保存产品信息</a>
                    break;
                case XCLNetTools.Enum.CommonEnum.HandleTypeEnum.UPDATE:
                    <a id="btnSave" class="easyui-linkbutton" data-options="iconCls:'icon-save'">保存修改</a>
                    break;
            }
        </div>
    </div>
</form>

<div class="XCLPanel" style="margin-top: 5px;">
    <div class="XCLPanelHeader XCLBolder">
        操作说明：
    </div>
    <div class="XCLPanelBody">
    </div>
</div>

<script type="text/javascript">
    $(function () {
        window.xclcms.Product.ProductAdd.Init();
    });
</script>